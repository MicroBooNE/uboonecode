<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v02_01_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "prod_piminus_0.1-2.0GeV_isotropic_uboone">
<!ENTITY tag "mcc4.0">
]>

<project name="&name;">

  <!-- Group -->
  <group>uboone</group>

  <!-- Project size -->
  <numevents>10000</numevents>

  <!-- Operating System -->
  <os>SL5,SL6</os>

  <!-- Larsoft information -->
  <larsoft>
    <tag>&release;</tag>
    <qual>e5:prof</qual>
  </larsoft>

  <!-- Project stages -->

  <stage name="gen">
    <fcl>prod_piminus_0.1-2.0GeV_isotropic_uboone.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/gen/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/gen/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>generated</datatier>
    <defname>&name;_&tag;_gen</defname>
  </stage>

  <stage name="g4">
    <fcl>standard_g4_uboone.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/g4/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/g4/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>simulated</datatier>
    <defname>&name;_&tag;_g4</defname>
  </stage>

  <stage name="detsim">
    <fcl>standard_detsim_uboone.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/detsim/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/detsim/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>optical-simulated</datatier>
    <defname>&name;_&tag;_detsim</defname>
  </stage>

  <stage name="reco2D">
    <fcl>standard_reco_uboone_2D.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/reco2D/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/reco2D/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>reconstructed-2d</datatier>
    <defname>&name;_&tag;_reco2D</defname>
  </stage>

  <stage name="reco3D">
    <fcl>standard_reco_uboone_3D.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/reco3D/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/reco3D/&name;</workdir>
    <numjobs>100</numjobs>
    <datatier>reconstructed-3d</datatier>
    <defname>&name;_&tag;_reco3D</defname>
  </stage>

  <stage name="merge">
    <fcl>copy.fcl</fcl>
    <outdir>/uboone/data/uboonepro/&release;/reco/&name;</outdir>
    <workdir>/uboone/app/users/uboonepro/&release;/reco/&name;</workdir>
    <numjobs>100</numjobs>
    <targetsize>2000000000</targetsize>
    <datatier>reconstructed</datatier>
    <defname>&name;_&tag;</defname>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
